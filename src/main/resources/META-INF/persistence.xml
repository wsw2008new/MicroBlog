<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.1"
             xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
    <persistence-unit name="persistenceUnit" transaction-type="RESOURCE_LOCAL">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <class>models.CommentEntity</class>
        <class>models.EmojiEntity</class>
        <class>models.PostEntity</class>
        <class>models.UserDataEntity</class>
        <properties>
            <property name="eclipselink.jdbc.url" value="jdbc:mysql://alikemal.org:3306/ali_asp"/>
            <property name="eclipselink.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <property name="eclipselink.jdbc.user" value="ali_asp" />
            <property name="eclipselink.jdbc.password" value="123456"/>
        </properties>
    </persistence-unit>
</persistence>
